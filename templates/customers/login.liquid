<!-- Login form -->
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <h3 class="display-4 text-center mb-4">{{ 'general.Layout.login' | t }}</h3>
      <div class="col-md-9 col-lg-6 col-xl-5">
        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder_svg img-fluid' }}
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        {% form 'customer_login' %}
          {%
            render 'form-errors'
            , form: form
          %}
          <!-- Email input -->
          <div data-mdb-input-init class="form-outline form-floating mb-4">
            <input
              type="email"
              id="login-email"
              class="form-control form-control-lg"
              placeholder="Enter a valid email address"
              name="customer[email]">
            <label class="form-label" for="login-email">{{ 'general.Layout.email' | t }}</label>
          </div>

          <!-- Password input -->
          <div data-mdb-input-init class="form-outline form-floating mb-3">
            <input
              type="password"
              id="login-password"
              class="form-control form-control-lg"
              placeholder="Enter password"
              name="customer[password]">
            <label class="form-label" for="login-password">{{ 'general.Layout.password' | t }}</label>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input
                class="form-check-input me-2"
                type="checkbox"
                value=""
                id="form2Example3"
                name="customer[rememberme]">
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
            <button
                type="button"
                class="btn text-body"
                data-bs-toggle="modal"
                data-bs-target="#recoverAccountModal">{{ 'general.Layout.forget_password' | t
                }}</button>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button
              type="submit"
              data-mdb-button-init
              data-mdb-ripple-init
              class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">
              {{ 'general.Layout.login' | t }}
            </button>
          </div>
          <div>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              {{ 'general.Layout.dont_have_account' | t }}
              <a href="{{routes.account_register_url}}" class="link-primary">{{ 'general.Layout.register' | t
}}</a>
            </p>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              <button
                type="button"
                class="nav-link link-primary"
                data-bs-toggle="modal"
                data-bs-target="#recoverAccountModal">Recover Account</button>
            </p>
          </div>
        {% endform %}
      </div>
    </div>
    <div
      class="orget-password-form modal fade"
      id="recoverAccountModal"
      tabindex="-1"
      aria-labelledby="recoverAccountModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="recoverAccountModalLabel">Reset Password</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <div class="modal-body">

            {% form 'recover_customer_password' %}
              {%
                render 'form-errors'
                , form: form
              %}

              <div data-mdb-input-init class="form-outline form-floating mb-4">
                <input
                  type="email"
                  id="login-email"
                  class="form-control form-control-lg"
                  placeholder="Enter a valid email address"
                  name="email">
                <label class="form-label" for="login-email">{{ 'general.Layout.email' | t }}</label>
              </div>
              <div class="text-center text-lg-start mt-4 pt-2">
                <button
                  type="submit"
                  data-mdb-button-init
                  data-mdb-ripple-init
                  class="btn btn-primary btn-lg"
                  style="padding-left: 2.5rem; padding-right: 2.5rem;">
                  Recover Account
                </button>
              </div>

            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>

</section>