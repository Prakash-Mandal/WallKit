<div class="position-relative text-center bg-light p-3 p-md-5">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4">{{ blog.title }}</h1>
    <p class="lead">Read our latest publication</p>
  </div>
</div>

<div class="container my-5 p-5">
  {% paginate blog.articles by 2 %}

    <div class="row row-cols-1 row cols-md-2 row-cols-lg-3 align-self-center">
      {% for article in blog.articles %}
        {% assign image = article.image %}

        <div class="col">
          <div class="card shadow">
            <div class="col card-img-top h-25 pt-3 align-self-center justify-content-center text-center">
              <figure class="figure  ">
                {% if image != blank %}
                  <img
                    src="{{ image | img_url: 'medium' }}"
                    class="card-img-top"
                    alt="{{article.image.alt}}"
                    height="auto">
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'card-img-top' }}
                {% endif %}
              </figure>
            </div>
            <div class="card-body">
              <h2 class="card-title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h2>
              <h6 class="card-subtitle">{{ article.author }} @ {{ article.created_at }}</h6>
              <p class="card-text">
                {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
                {% endif %}
              </p>
            </div>
          </div>

        </div>
      {% endfor %}
    </div>


    {% render 'pagination'
      , paginate: paginate %}

  {% endpaginate %}


</div>